<h1>Edit Product Items </h1>

<%= form_for(@product, url: product_path(@product,val: params[:val]), method: :patch, html: { multipart: true }) do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name , class: 'form-control' %>

	<%= f.label :value %>
	<%= f.number_field :value , class: 'form-control' %>

	<%= f.label :size %>
	<%= f.text_field :size, class: 'form-control' %>

	<%= f.label :description %>
	<%= f.text_field :description, class: 'form-control' %>

	<%= f.hidden_field(:image_cache) %>
	<%= f.file_field(:image) %>

	<%= f.submit "Update", class: 'btn btn-primary' %>
<% end %>